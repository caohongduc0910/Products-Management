extends ../../layouts/default.pug
include ../../mixins/search-bar.pug
include ../../mixins/sort.pug


block main 
  h1 Danh sách danh mục

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
      .card-body
        .row 
          .col-6
            each item in filterStatus
              button(class=`btn btn-sm ms-1 btn-outline-success ${item.class}`
              button-status= item.status) #{item.name}
          .col-6
            +search-bar(keyword)
  .card.mb-3
    .card-header Sắp xếp
      .card-body
        .row
          .col-4
            +sort()

  .card.mb-3
    .card-header Danh sách

      .card-body
        .row
          .col-10 
          .col-2 
            a(href=`${prefixAdmin}/products-categories/create`
            class="btn btn-outline-success") +Thêm mới
      
      table(class = 'table table-hover table-sm'
            checkbox-multi)
        thead
          tr
            th
              input(type="checkbox" name="checkall")
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            //- th Tạo bởi
            th Hành động

        tbody
          each item, index in productCategory
            tr 
              td
                input(type="checkbox" name="id" value=item.id)
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td
                input(
                  type="number"
                  name="position"
                  value=item.position
                  style="width: 60px"
                  min="1"
                )
              td
                if(item.status == "active")
                  a(href="javascript:;"
                  button-status = item.status
                  data-id = item.id
                  button-change-status
                  class="badge text-bg-success"
                  ) Hoạt động
                else 
                  a(href="javascript:" 
                  button-status = item.status
                  data-id = item.id
                  button-change-status
                  class="badge text-bg-danger"
                  ) Ngừng hoạt động
              td
                a(
                href=`${prefixAdmin}/products-categories/detail/${item.id}`
                class="btn btn-secondary btn-sm"
                ) Chi tiết
                a(href=`${prefixAdmin}/products-categories/edit/${item.id}`
                class="btn btn-warning btn-sm ms-1"
                ) Sửa
                button(class="btn btn-danger btn-sm ms-1"
                button-delete
                data-id=item.id
                ) Xóa

  form(action=""
      id="form-delete"
      data-path=`${prefixAdmin}/products-categories/delete/`
      method="POST")
