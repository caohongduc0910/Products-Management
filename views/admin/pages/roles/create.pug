extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    h1(class="mb-4") Thêm mới quyền

    +alertFail(5000)
    +alertSuccess(5000)

    form(
      action=`${prefixAdmin}/roles/create`
      method="POST"
    )
      div(class="form-group")
        label(for="title") Nhóm quyền
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
        )

      div(class="form-group")
        label(for="desc") Mô tả ngắn
        textarea(
          type="text"
          class="form-control"
          id="desc"
          name="description"
          rows="5"
          textarea
        )
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Tạo mới